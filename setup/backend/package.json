{
  "name": "backend",
  "version": "0.0.1",
  "type": "commonjs",
  "description": "Questo backend Ã¨ una cosa seria!",
  "author": "Alessandro Bianco <mydevhero@gmail.com>",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": ". ../bin/configure_env.sh && pnpm exec nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prisma:generate": "../bin/prisma_generate.sh",
    "prisma:migrate": "../bin/prisma_migrate.sh",
    "prisma:seed": "../bin/prisma_seed.sh",
    "prisma:reset": "../bin/prisma_reset.sh && pnpm run prisma:seed",
    "prisma:studio": "../bin/prisma_studio.sh",
    "dev:seed": "pnpm run prisma:generate && pnpm run prisma:seed",
    "start": ". ../bin/configure_env.sh && node dist/main/src",
    "dev": ". ../bin/configure_env.sh && nest start --watch",
    "start:debug": ". ../bin/configure_env.sh && nest start --debug --watch",
    "start:prod": ". ../bin/configure_env.sh && node dist/main/src",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": ". ../bin/configure_env.sh && jest",
    "test:watch": ". ../bin/configure_env.sh && jest --watch",
    "test:cov": ". ../bin/configure_env.sh && jest --coverage",
    "test:debug": ". ../bin/configure_env.sh && node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": ". ../bin/configure_env.sh && jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.5",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^17.2.3",
    "pg": "^8.17.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "^7.3.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
